<h2>Edit the movie: {{movie.title}}</h2>
<form action="/movies/{{movie._id}}" method="POST">
  <label>Title
    <input type="text" value="{{movie.title}}" name="title" />
  </label>
  <label>Genre
    <input type="text" value="{{movie.genre}}" name="genre" />
  </label>
  <label>Plot
    <input type="text" value="{{movie.plot}}" name="plot" />
  </label>
  <br />
  <label for="cast-select">Cast:
    <select name="cast">
      <option disable selected value=""></option>
      {{#each celebrities}}
        <option value="{{this._id}}"> {{this.name}} </option>
      {{/each}}
    </select>
  </label>
  <br />
  <button type="submit">Submit</button>
</form>